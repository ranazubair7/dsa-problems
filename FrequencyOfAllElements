
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

/**
 * This Class provides the solution to finding the frequency of all the elements inside an array.
 * It achieves this by using 2 approaches both having the tme complexity as O(n)
 */
public class FrequencyOfAllElements {

    private static Logger LOGGER = LoggerFactory.getLogger(FrequencyOfAllElements.class);

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5, 5};
        frequencyCheck2ndApproach(arr);
    }

    private static void frequencyCheck(int[] arr) {

        int index = 1;
        int count = 1;
        if (arr.length == 1) {
            LOGGER.info("count of " + arr[0] + " is: " + count);
            return;
        }
        for (index = 1; index < arr.length; index++) {

            if (arr[index] == arr[index - 1]) {
                count++;
            } else {
                LOGGER.info("count of " + arr[index - 1] + " is: " + count);
                count = 1;
            }
        }
        LOGGER.info("count of " + arr[index - 1] + " is: " + count);
    }

    private static void frequencyCheck2ndApproach(int[] arr) {

        int count = 1;
        int index = 1;
        while (index < arr.length) {
            while (index < arr.length && arr[index] == arr[index - 1]) {
                count++;
                index++;
            }
            LOGGER.info("count of " + arr[index - 1] + " is: " + count);
            if (index < arr.length) {
                index++;
                count = 1;
            }
        }
        if (arr.length == 1 || index > arr.length) {
            LOGGER.info("count of " + arr[index - 1] + " is: " + count);
        }
    }
}
